<div>

  {% if isAuthenticated %}

  <a href="/tweets/new" class="btn btn--primary btn--sweeter">
    <i class="navbar__sweeter-btn-icon fa-solid fa-terminal"></i><span class="navbar__link__text">Sweeter</span>
  </a>

  <a class="sidebar-left__user-profile" href="/users/{{ currentUser.username }}">

    <img src="{{ currentUser.avatar }}" alt="" class="sidebar-left__user-profile__img">

    <span class="sidebar-left__user-profile__text"> {{ currentUser.username }} </span>

  </a>

  {% endif %}

</div>